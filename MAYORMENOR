	echo "Valor de C $c";
	if ($a> $b and $b>$c) {
		echo "El orden de los valores es : $a, $b $c";
	}
	if ($a>$b and $c>$b) {
		echo "El orden de los valores es : $a, $c, $b";
	}
	if ($b>$a and $a>$c) {
		echo "El orden de los valores es $b, $a, $c";
	}
	if ($b> $b and $c>$a) {
		echo "El orden de los valores es : $b, $c, $a";
	}
	if ($c>$b and $b>$a) {
		echo "El orden de los valores es : $c, $b, $a";
	}
